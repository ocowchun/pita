# This section matches events whose tag is td.DATABASE.TABLE
<match td.*.*>
  type tdlog
  apikey foo_bar

  auto_create_table
  buffer_type file
  buffer_path /var/log/td-agent/buffer/td
</match>

## match tag=debug.** and dump to console
<match debug.**>
  type stdout
</match>


<match rails.access>
 type copy
 <store>
  type elasticsearch
  logstash_format true
  host <%= node['pita']['elasticsearch_host'] %>
  index_name rails
  type_name rails.access
</store>
<store>
  type s3
  s3_bucket <%= node['pita']['s3_bucket'] %>
  s3_region <%= node['pita']['s3_region'] %>
  path rails-logs/
  buffer_path /var/log/td-agent/s3-buffer/rails

  time_slice_format %Y%m%d%H
  time_slice_wait 10m
  utc

  buffer_chunk_limit 256m
</store>
</match>

<match nginx.access>
 type copy
 <store>
  type elasticsearch
  logstash_format true
  host  <%= node['pita']['elasticsearch_host'] %>
  index_name nginx
  type_name nginx.access
  </store>
  <store>
    type s3
    s3_bucket <%= node['pita']['s3_bucket'] %>
    s3_region <%= node['pita']['s3_region'] %>
    path nginx-logs/
    buffer_path /var/log/td-agent/s3-buffer/nginx

    time_slice_format %Y%m%d%H
    time_slice_wait 10m
    utc

    buffer_chunk_limit 256m
  </store>
</match>

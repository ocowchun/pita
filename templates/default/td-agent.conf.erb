<source>
  type tail
  path /home/<%= node['pita']['user_name'] %>/apps/<%= node['pita']['rails_app_name'] %>/shared/log/production.log
  pos_file /var/log/td-agent/rails.access.log.pos
  tag rails.access
  format json
</source>

 <source>
